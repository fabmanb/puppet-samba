
# --------------------------- Winbind Options ---------------------------

<% if @workgroup -%>
  workgroup = <%= @workgroup %>
<% end -%>
<% if @passwd_server -%>
  password server = <%= @passwd_server %>
<% end -%>
<% if @realm -%>
  realm = <%= @realm %>
<% end -%>
<% if @winbind_security -%>
  security = <%= @winbind_security %>
<% end -%>
<% if @idmap_uid -%>
  idmap uid = <%= @idmap_uid %>
<% end -%>
<% if @idmap_gid -%>
  idmap gid = <%= @idmap_gid %>
<% end -%>
<%if @separator -%>
  winbind separator = <%= @separator %>
<% end -%>
<%if @template_shell -%>
  template shell = <%= @template_shell %>
<% end -%>
<%if @template_homedir -%>
  template homedir = <%= @template_homedir %>
<% end -%>
<% if @use_default_domain -%>
  winbind use default domain = <%= @use_default_domain %>
<% end -%>
<% if @offline_login -%>
  winbind offline logon = <%= @offline_login %>
<% end -%>
<% if @idmap_backend -%>
  idmap backend = <% @idmap_backend %>
<% end -%>
<% if @winbind_enum_groups -%>
  winbind enum groups = <%= @winbind_enum_groups %>
<% end -%>
<% if @winbind_enum_users -%>
  winbind enum users = <%= @winbind_enum_users %>
<% end -%>
<% if @obey_pam_restrictions -%>
  obey pam restrictions = <%= @obey_pam_restrictions %>
<% end -%>
<% if @invalid_users -%>
  invalid users = <%= @invalid_users %>
<% end -%>
<% if @socket_options -%>
  socket options = <%= @socket_options %>
<% end -%>